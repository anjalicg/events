<h3>Recently added</h3>
<table>
<tr><th>What</th><th>Where</th><th>When</th></tr>
<% @latest_10.each do |event|%>
<% if event %>
<tr><td><strong><%= link_to event.title, :controller=>'event',:action=>'show',:id=>event.id %></strong></td>
<td><%= event.country %>,<%= event.city %>,<%= event.location %></td>
<td><%= event.time.strftime("%e-%b-%Y at %r") %></td> <td>....Added <%=time_ago_in_words(event.created_at)%> ago</td>
</tr>
<% end %>
<% end %>
</table>
